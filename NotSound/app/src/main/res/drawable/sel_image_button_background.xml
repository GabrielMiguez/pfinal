<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <padding android:bottom="5dp"/>
            <gradient
                android:startColor="@color/color_link_bodyStart"
                android:endColor="@color/color_link_bodyEnd"
                android:angle="270" />
            <corners
                android:radius="19dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="5dp"
                android:bottom="10dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <padding android:bottom="5dp"/>
            <gradient
                android:startColor="@color/color_link_pressed_bodyStart"
                android:endColor="@color/color_link_pressed_bodyEnd"
                android:angle="270" />
            <corners
                android:radius="19dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="5dp"
                android:bottom="10dp"/>
        </shape>
    </item>
</selector>